<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/layoutBird"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <EditText
    android:id="@+id/textEditViewSpecie"
    style="@style/field_style"
    android:hint="@string/label_specie"
    android:importantForAutofill="no"
    android:inputType="text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textViewSpecieLabel" />
  <EditText
    android:id="@+id/editTextViewColor"
    style="@style/field_style"
    android:hint="@string/label_color"
    android:importantForAutofill="no"
    android:inputType="text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/texViewColorLabel" />
  <EditText
    android:id="@+id/textEditViewCommonName"
    style="@style/field_style"
    android:hint="@string/label_common_name"
    android:importantForAutofill="no"
    android:inputType="text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textViewCommonNameLabel" />
  <TextView
    android:id="@+id/textViewSpecieLabel"
    style="@style/label_field_style"
    android:text="@string/label_specie"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <TextView
    android:id="@+id/textViewCommonNameLabel"
    style="@style/label_field_style"
    android:text="@string/label_common_name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/editTextViewColor" />
  <TextView
    android:id="@+id/texViewColorLabel"
    style="@style/label_field_style"
    android:text="@string/label_color"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textEditViewSpecie" />
</androidx.constraintlayout.widget.ConstraintLayout>